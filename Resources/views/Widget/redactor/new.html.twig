<div id="widget-{{slot}}" class="add-widget">
    <form method="POST" action="{{path('Widget_New', {'page': page.id,'slot':slot, 'type':'redactor'} )}}">
    {{form_row(form.content, {'attr': {'class':'redactor'} })}}
    {{form_rest(form)}}
    <input type="submit" value="OK" />
    </form>
</div>

    <script type="text/javascript">
        $(document).ready(
            function()
            {
                $('.redactor').redactor({
                    lang: 'fr',
                    autoresize: true,
                });
            }
        );

    </script>
